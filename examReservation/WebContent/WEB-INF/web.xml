<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>examReservation</display-name>
  <filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>com.zealot.web.filter.CharacterEncodingFilter</filter-class>
  </filter>
  <filter>
		<filter-name>LoginFilter</filter-name>
		<filter-class>com.zealot.web.filter.LoginFilter</filter-class>
		<init-param><!-- 初始化函数的参数 -->
	  		<param-name>errorPage</param-name>
	  		<param-value>login.html</param-value>
  		</init-param>
  </filter>
  <filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>/student/*</url-pattern>
		<url-pattern>/administrator/*</url-pattern>
		<url-pattern>/common/*</url-pattern>
		<url-pattern>/errorpage/*</url-pattern>
		<url-pattern>/examination/*</url-pattern>
	</filter-mapping>
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>VerifyCode</servlet-name>
    <servlet-class>com.zealot.web.servlet.VerifyCodeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.zealot.web.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ReserveServlet</servlet-name>
    <servlet-class>com.zealot.web.servlet.ReserveServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ImportExcelServlet</servlet-name>
    <servlet-class>com.zealot.web.servlet.ImportExcelServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>StudentServlet</servlet-name>
    <servlet-class>com.zealot.web.servlet.StudentServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminServlet</servlet-name>
    <servlet-class>com.zealot.web.servlet.AdminServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ExaminationServlet</servlet-name>
    <servlet-class>com.zealot.web.servlet.ExaminationServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MessageServlet</servlet-name>
    <servlet-class>com.zealot.web.servlet.MessageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MessageServlet</servlet-name>
    <url-pattern>/message.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ReserveServlet</servlet-name>
    <url-pattern>/reserve.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>VerifyCode</servlet-name>
    <url-pattern>/produceVerifyCode.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>StudentServlet</servlet-name>
    <url-pattern>/student.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ImportExcelServlet</servlet-name>
    <url-pattern>/import.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminServlet</servlet-name>
    <url-pattern>/admin.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ExaminationServlet</servlet-name>
    <url-pattern>/examination.action</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/errorpage/404.html</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/errorpage/500.html</location>
  </error-page>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>